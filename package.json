{
  "name": "pi-rlm",
  "version": "1.0.0",
  "description": "Recursive Language Model extension for pi",
  "scripts": {
    "check": "npm run typecheck",
    "check:full": "npm run lint && npm run typecheck",
    "typecheck": "tsc --noEmit src/rlm-engine.ts src/index.ts 2>&1 | grep -v 'Cannot find module'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "python3 tests/test-repl-standalone.py",
    "test:integration": "./tests/run-tests.sh",
    "test:fixtures": "npx tsx tests/generate-fixtures.ts",
    "copy": "mkdir -p .pi/extensions/rlm && cp src/*.ts .pi/extensions/rlm/"
  },
  "pi": {
    "extensions": ["./src/index.ts"]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true,
      "es2022": true
    }
  }
}
